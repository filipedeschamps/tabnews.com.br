{
  "name": "@tabnews/config",
  "version": "1.0.0",
  "description": "Configurações padronizadas dos projetos TabNews",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./eslint": "./src/shared/eslint.config.cjs",
    "./lint-staged": "./src/shared/lint-staged.cjs",
    "./package.json": "./package.json",
    "./prettier": "./src/shared/prettier.config.cjs",
    "./vitest": "./src/shared/vitest.config.js"
  },
  "bin": {
    "tn": "bin/tn.js"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "tn": "tn",
    "test": "tn test",
    "test:run": "tn test run",
    "lint": "eslint . --max-warnings 0 && prettier --check .",
    "format": "eslint --fix . && prettier --write .",
    "commit": "cz",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@eslint/js": "9.26.0",
    "@next/eslint-plugin-next": "15.3.2",
    "@tabnews/eslint-plugin-primer-react": "6.2.0-experimental.1",
    "@vitejs/plugin-react": "4.4.1",
    "@vitest/coverage-v8": "3.1.3",
    "@vitest/eslint-plugin": "1.1.44",
    "commander": "13.1.0",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.3.4",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "globals": "16.1.0",
    "jsdom": "26.1.0",
    "prettier": "3.5.3",
    "typescript-eslint": "8.32.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.2"
  },
  "author": "Turma do TabNews",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filipedeschamps/tabnews.com.br.git",
    "directory": "packages/config"
  },
  "keywords": [
    "cli",
    "config",
    "tabnews"
  ]
}
